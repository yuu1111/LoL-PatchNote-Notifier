# Discord Configuration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# League of Legends Patch Notes Configuration
LOL_PATCH_NOTES_URL=https://www.leagueoflegends.com/ja-jp/news/tags/patch-notes

# Gemini AI Configuration
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_TOKENS=8192
GEMINI_TIMEOUT=60000
GEMINI_MAX_RETRIES=3

# Monitoring Configuration
CHECK_INTERVAL_CRON=60

# Logging Configuration
LOG_LEVEL=info
SCRAPER_DEBUG=false  # Set to true to enable detailed scraper debug logs

# Application Configuration
NODE_ENV=development

# HTTP Client Configuration
REQUEST_TIMEOUT=30000
MAX_RETRIES=3
RETRY_DELAY=1000

# Rate Limiting Configuration
MAX_REQUESTS_PER_HOUR=20
RATE_LIMIT_WINDOW=3600000