# Discord Configuration (Required)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# LoL Patch Notes Configuration (Optional - has defaults)
LOL_PATCH_NOTES_URL=https://www.leagueoflegends.com/ja-jp/news/game-updates/

# Storage Configuration (Optional - has defaults)
LAST_STATUS_FILE_PATH=./data/last_patch_status.json

# Scheduling Configuration (Optional - has defaults)
CHECK_INTERVAL_CRON=0 */90 * * *  # Every 90 minutes

# Logging Configuration (Optional - has defaults)
LOG_LEVEL=info
NODE_ENV=development

# HTTP Configuration (Optional - has defaults)
REQUEST_TIMEOUT_MS=30000
MAX_RETRIES=3
RATE_LIMIT_PER_HOUR=20

# Circuit Breaker Configuration (Optional - has defaults)
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT_MS=60000
CIRCUIT_BREAKER_MONITORING_PERIOD_MS=120000

# Redis Configuration (Optional - for production deployments)
# REDIS_URL=redis://localhost:6379
# REDIS_KEY_PREFIX=lol-patch-notifier: